# Database
DB_PATH=./database.sqlite

# Redis Configuration
REDIS_URL=redis://localhost:6379

# B2 Configuration (BackBlaze)
B2_APPLICATION_KEY_ID=your_backblaze_app_key_id
B2_APPLICATION_KEY=your_backblaze_app_key

# Original Video Bucket (where source videos are stored)
B2_OV_BUCKET_ID=your_original_video_bucket_id
B2_OV_BUCKET_NAME=your_original_video_bucket_name

# HLS Output Bucket (where transcoded files are stored)
B2_HLS_BUCKET_ID=your_hls_output_bucket_id
B2_HLS_BUCKET_NAME=your_hls_output_bucket_name

# Transcoding Configuration
MAX_CONCURRENT_JOBS=2
TEMP_UPLOAD_DIR=./uploads

# API Configuration
API_KEY=your_secure_api_key
PORT=3000

# Callback Configuration
# Default callback URL (can be overridden per job)
WEBAPP_CALLBACK_URL=https://your-domain.com/api/transcode/callback

# Callback token - same for all environments (staging and production)
CALLBACK_TOKEN=your_callback_token

# Legacy support (fallback if CALLBACK_TOKEN not set)
WEBAPP_API_KEY=your_callback_token

# Environment
NODE_ENV=production

DASHBOARD_PASSWORD=your_dashboard_password

SESSION_SECRET=your_session_secret_here
